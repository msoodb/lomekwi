server {
    if ($host = www.maangrui.xyz) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


    if ($host = maangrui.xyz) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


       listen       80;
        server_name  maangrui.xyz www.maangrui.xyz;
    return 404; # managed by Certbot




}